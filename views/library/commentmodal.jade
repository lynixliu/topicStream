#myModal.modal.hide.fade(tabindex="-1", role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
  .modal-header
    button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
    a#myModalLabel(href="./"+article._id.toHexString())= article.title
  .modal-body
    p= article.body
    small.pull-right.muted= article.created_at
  .modal-footer
    - each comment in article.comments
      .blockquote= comment.comment
        cite 
          a(href="#"+comment.author) #{comment.author}
          small.pull-right.muted= comment.created_at
    hr
    form( method="post",action="./addComment")
      input(type="hidden",name="_id", id="editArticleBody, value=article._id.toHexString())
      textarea( name="_id", rows=3, placeholder=".span12") 
      br  
      author:input(type="text",name="person",id="addCommentPerson")   
      input#editArticleSubmit.pull-right(type="submit", value="评论")